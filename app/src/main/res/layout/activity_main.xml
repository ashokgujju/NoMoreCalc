<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434343"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key7"
                android:text="7"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/key8"
                android:text="8"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/key9"
                android:text="9"
                style="@style/fontStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key4"
                android:text="4"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/key5"
                android:text="5"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/key6"
                android:text="6"
                style="@style/fontStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/key1"
                android:text="1"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/key2"
                android:text="2"
                style="@style/fontStyle" />
            <TextView
                android:text="3"
                android:id="@+id/key3"
                style="@style/fontStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/keyDel"
                android:text="DEL"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/key0"
                android:text="0"
                style="@style/fontStyle" />
            <TextView
                android:id="@+id/keySubmit"
                android:text="SUBMIT"
                style="@style/fontStyle" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:text="22+48=?"
        android:padding="20dp"
        android:textColor="#808080"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/answer"
        android:layout_above="@id/pad"
        android:gravity="right"
        android:padding="20dp"
        android:textColor="#808080"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
